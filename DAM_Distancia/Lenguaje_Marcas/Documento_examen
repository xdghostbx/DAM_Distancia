}

button {/*Botón*/
    align-self: flex-start; /* Alineación del botón al inicio del contenedor flex */
    padding: 1rem 2rem; /* Relleno interno del botón */
    border-radius: 5px; /* Bordes redondeados del botón */
    border: none; /* Sin borde para el botón */
