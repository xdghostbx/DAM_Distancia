/* Estilos generales para el cuerpo de la página */
body {/*FAMILIA FUENTE Aria, sin serifa*/
    font-family: Arial, sans-serif;
}
 
h2,h3{
    color:cornflowerblue;/*Color de texto cornflowerblue*/
}
/* Estilos para el encabezado */
header {  
    background-color: rgb(15, 194, 158); /* Fondo color agua marina */
    color: white; /* Fuente del texto en blanco */
    text-align: center; /* Texto alineado al centro */
    padding: 10px 0px; /* Espaciado interno 10px (vertical) 0px horizontal */
 
}
/* Estilos para la navegación */
nav ul {
    list-style-type: none; /* tipo de estilo lista none, sin estilo la lista */
    padding: 0; /* Relleno al 0 */
    font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif; /* Familia de fuente Impact con tamaño grande */
    font-size: xx-large;
}

nav ul li {
    display: inline; /* Despliega  en línea */
    margin: 0 30px; /* Margen entre elementos */
}

nav ul li a {
    color: white; /* Texto color blanco */
    text-decoration: none; /* Decoración de texto none */
}
nav a:visited{/*Link visitado*/
    color:rgb(221, 217, 217);/* Texto color rgb(221, 217, 217)*/
}
nav a:focus {/*Link activo con el foco, por selección de tabulador*/
    color:#671f1f;/* Texto color #671f1f;*/
}

nav a:hover{/*Ratón sobre el link*/
    color:#671f1f;/* Texto color #671f1f;*/
}
nav a:active {/*Link presionado, cuando hacemos click*/
    color:yellowgreen;/* Texto color yellowgreen */
}

 

/* Estilos para la galería de tarjetas */
.card-container {/*Contenedor card*/
    display: flex; /* Uso de flexbox para alinear las tarjetas */
    justify-content: space-around; /* Distribución del espacio alrededor de las tarjetas */
    flex-wrap: wrap; /* Permite la envoltura de elementos */
}

.card {/*card*/
    width: 30%; /* Ancho de cada tarjeta al 30% */
    margin: 10px; /* Margen alrededor de cada tarjeta de 10px */
    text-align: center;  /* Texto alineado al centro */
}

.card img {/*imagen dentro de la card*/
    width: 50%; /* Ancho de la imagen al 50% */
    height: auto; /* Altura la ponemos en automática para mantener la proporción */
    border-radius: 30px; /* Bordes redondeados de la imagen al 30px */
}

/* Estilos para las secciones de la página */
