<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Lunes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/botones_estilo"
        android:text="@string/lunes" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Martes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/botones_estilo"
        android:text="@string/martes" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Miercoles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/botones_estilo"
        android:text="@string/miercoles" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Jueves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/botones_estilo"
        android:text="@string/jueves" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Viernes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/botones_estilo"
        android:text="@string/viernes" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Sabado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/botones_estilo"
        android:text="@string/sabado" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Domingo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/botones_estilo"
        android:text="@string/domingo" />

</LinearLayout>